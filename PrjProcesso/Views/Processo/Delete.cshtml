@model PrjProcesso.ViewModels.ProcessoViewModel

@{
    ViewData["Title"] = "Excluir Processo";
}

<h1>@ViewData["Title"]</h1>

<h4>Você tem certeza que deseja excluir este processo?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Nome do Processo</dt>
    <dd class="col-sm-10">@Model.NomeProcesso</dd>

    <dt class="col-sm-2">NPU</dt>
    <dd class="col-sm-10">@Model.NPU</dd>

    <dt class="col-sm-2">UF</dt>
    <dd class="col-sm-10">@Model.UF</dd>

    <dt class="col-sm-2">Município</dt>
    <dd class="col-sm-10">@Model.Municipio</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
